rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // REGRAS DE SEGURANÇA DO CONTROLE FINANCEIRO
    // ==========================================
    //
    // Permissões implementadas:
    // 1. Dados pessoais: Usuário acessa apenas seus próprios dados
    // 2. Dados compartilhados: Membros e admins de grupos têm controle total
    //    sobre transações, salários e cartões vinculados ao grupo
    // 3. Grupos: Apenas membros podem visualizar e editar, apenas admin pode excluir
    //
    // ==========================================
    
    // Regra padrão: negar tudo por segurança
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Transações - cada usuário acessa apenas seus dados OU membros do grupo
    match /transactions/{transactionId} {
      allow read: if request.auth != null 
                  && (request.auth.uid == resource.data.userId
                      || (resource.data.groupId != null 
                          && request.auth.uid in get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data.members));
      
      allow write, delete: if request.auth != null 
                           && (request.auth.uid == resource.data.userId
                               || (resource.data.groupId != null 
                                   && request.auth.uid in get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data.members));
      
      allow create: if request.auth != null 
                    && (request.auth.uid == request.resource.data.userId
                        || (request.resource.data.groupId != null 
                            && request.auth.uid in get(/databases/$(database)/documents/groups/$(request.resource.data.groupId)).data.members));
    }
    
    // Salários - cada usuário acessa apenas seus dados OU membros do grupo
    match /salaries/{salaryId} {
      allow read: if request.auth != null 
                  && (request.auth.uid == resource.data.userId
                      || (resource.data.groupId != null 
                          && request.auth.uid in get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data.members));
      
      allow write, delete: if request.auth != null 
                           && (request.auth.uid == resource.data.userId
                               || (resource.data.groupId != null 
                                   && request.auth.uid in get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data.members));
      
      allow create: if request.auth != null 
                    && (request.auth.uid == request.resource.data.userId
                        || (request.resource.data.groupId != null 
                            && request.auth.uid in get(/databases/$(database)/documents/groups/$(request.resource.data.groupId)).data.members));
    }
    
    // Cartões de crédito - cada usuário acessa apenas seus dados OU membros do grupo
    match /creditCards/{cardId} {
      allow read: if request.auth != null 
                  && (request.auth.uid == resource.data.userId
                      || (resource.data.groupId != null 
                          && request.auth.uid in get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data.members));
      
      allow write, delete: if request.auth != null 
                           && (request.auth.uid == resource.data.userId
                               || (resource.data.groupId != null 
                                   && request.auth.uid in get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data.members));
      
      allow create: if request.auth != null 
                    && (request.auth.uid == request.resource.data.userId
                        || (request.resource.data.groupId != null 
                            && request.auth.uid in get(/databases/$(database)/documents/groups/$(request.resource.data.groupId)).data.members));
    }
    
    // Grupos - permissões especiais
    match /groups/{groupId} {
      // Leitura: apenas membros do grupo
      allow read: if request.auth != null 
                 && request.auth.uid in resource.data.members;
      
      // Criação: qualquer usuário autenticado
      allow create: if request.auth != null 
                   && request.auth.uid in request.resource.data.members;
      
      // Atualização: apenas o administrador ou membros
      allow update: if request.auth != null 
                   && (request.auth.uid == resource.data.adminId 
                       || request.auth.uid in resource.data.members);
      
      // Exclusão: apenas o administrador
      allow delete: if request.auth != null 
                   && request.auth.uid == resource.data.adminId;
    }
    
    // Membros de grupos
    match /groups/{groupId}/members/{memberId} {
      allow read: if request.auth != null 
                 && request.auth.uid == memberId;
      allow write: if request.auth != null 
                  && get(/databases/$(database)/documents/groups/$(groupId)).data.adminId == request.auth.uid;
    }
    
    // Perfis de usuários
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
